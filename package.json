{
  "name": "api-adapter-service",
  "version": "1.0.0",
  "description": "OpenAPI Fastify API Adapter Service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "lint:check": "eslint src/ --ext .ts --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "generate-docs": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "generate-client": "bash scripts/generate-typescript-client.sh",
    "generate-client-auto": "bash scripts/start-and-generate.sh",
    "test-api": "bash test-api.sh"
  },
  "keywords": [
    "fastify",
    "openapi",
    "api",
    "adapter",
    "service",
    "typescript",
    "nodejs"
  ],
  "author": "API Adapter Service Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/compress": "^8.0.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.1.0",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.10.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "joi": "^17.12.2",
    "memory-cache": "^0.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
